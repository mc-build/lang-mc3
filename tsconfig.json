{
	"include": ["./src/**/*"],
	"exclude": ["./node_modules", "./dist", "./types"],
	"compilerOptions": {
		"declarationDir": "./types/",
		"noImplicitAny": true,
		"module": "es2022",
		"target": "ES2022",
		"moduleResolution": "node",
		"strict": true,
		"resolveJsonModule": true,
		"declaration": true,
		"emitDeclarationOnly": true
	}
}
